{
  "name": "nat-net",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite dev",
    "electron:build": "node scripts/build.js"
  },
  "dependencies": {
    "uuid": "^13.0.0",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.2",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.nat-net.app",
    "productName": "Nat-Net",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist",
      "dist-electron",
      "electron/nat-service.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
